<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34495E"
    tools:context="com.sener35gmail.burak.myapplication.ShowMyDeceased">

    <ListView
        android:id="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/listview_color_and_settings"
        android:cacheColorHint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/et_deceaseds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/kayıtlı_merhumlar"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="27sp"
        android:textStyle="bold" />



</RelativeLayout>
